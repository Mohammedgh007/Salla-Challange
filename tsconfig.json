{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": { 
      "@/validators/*": ["./src/business/validators/*"],
      "@/rest/*": ["./src/infastructure/rest/*"],
      "@/exceptions/*": ["./src/app/_exceptions/*"],
      "@/requestDto/*": ["./src/data/requestDto/*"],
      "@/models/*": ["./src/data/models/*"],
      "@/context/*": ["./src/data/context/*"],
      "@/DICoordinator": ["./src/dependencyInjectionHandler/DICoordinator"],
      "@/Components/*": ["./src/presentation/components/*"],
      "@/Layouts/*": ["./src/presentation/layouts/*"],
      "@/Formatters/*": ["./src/presentation/formatters/*"],
      "@/images/*": ["./public/images/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
